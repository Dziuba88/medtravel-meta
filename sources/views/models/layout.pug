block variables
include ../lib/mixins
doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title MedTravel &#8741; #{PageTitle}
    link(rel="icon" type="image/png" href="img/favicon.png")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Fira+Sans:400,500&amp;subset=cyrillic")
    link(rel="stylesheet", href="css/styles.min.css")
  body
    header.mt_header
      .topbar
        .container
          .topbar--wraper
            .topbar__left
            .topbar__right
      .navbar
        .container
          .navbar--wraper
            .navbar__left
              a.navbar--brand(href="index.html"): img(src="img/logo.png", alt="")
              .navbar--slogan Мы делаем ваш отдых<br>счастливым и здоровым!
            .navbar__center
              .navbar--nav
                ul
                  +item('Главная', 'index.html')
                  +item('Лечение', 'treatment.html')
                  +item('Отдых', 'rest.html')
                  +item('Предложения', 'offers.html')
                  +item('Вопрос доктору', 'faq.html')
            .navbar__right
              .dropdown
                .dropdown--toggle(data-toggle="dropdown")
                  span RU
                  svg: use(xlink:href="#shevron")
                .dropdown--menu
                  ul
                    li.active: a(href="") RU
                    li: a(href="") EN
                    li: a(href="") FR
                    li: a(href="") IT
                    li: a(href="") IS
                    li: a(href="") DE
    block content
    h1 Lorem Ipsum
    block scripts
      script(src="js/jquery-3.3.1.min.js")
      script(src="js/plugins.min.js")
      script(src="js/app.js")
















